<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.raantech.solalat.user">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name="com.raantech.solalat.user.common.MyApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        tools:replace="allowBackup">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name="com.raantech.solalat.user.ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.auth.AuthActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.media.MediaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.dataview.viewimage.ViewImageActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.dataview.dataviewer.DataViewerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.more.aboutus.AboutUsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.more.faqs.FaqsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.map.MapActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.barn.activities.BarnDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.truck.activities.TruckDetailsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.medical.activities.MedicalsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.addhorse.AddHorseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.horse.HorseActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.main.accessories.activities.AccessoriesActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.cart.CartActivity"
            android:screenOrientation="portrait" />
        <activity
