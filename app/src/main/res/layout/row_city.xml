<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="city"
            type="com.raantech.solalat.user.data.models.City" />

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="?selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relativeContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@{city.selected ? @color/button_color :  @color/white}">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_alignParentStart="true"
                android:gravity="center|start"
                android:text="@{city.name}"
                android:textAppearance="@style/textview_normal_regular"
                android:textColor="@{city.selected ? @color/white : @color/edittext_color}"
                android:textSize="@dimen/_12ssp"
                tools:text="Amman , Jordan" />

            <ImageView
                android:id="@+id/imgSelected"
                android:layout_width="@dimen/_17sdp"
                android:layout_height="@dimen/_17sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="@dimen/_12sdp"
                android:src="@drawable/ic_true"
                android:visibility="@{city.selected ? View.VISIBLE : View.GONE}" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/text_gray"/>
    </LinearLayout>

</layout>