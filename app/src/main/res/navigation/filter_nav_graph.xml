<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/filter_nav_graph"
    app:startDestination="@id/filterFragment">

    <fragment
        android:id="@+id/filterFragment"
        android:name="com.raantech.solalat.user.ui.filter.fragments.FilterFragment"
        android:label="FilterFragment"
        tools:layout="@layout/fragment_filter">
        <action
            android:id="@+id/action_filterFragment_to_filteredHorsesFragment"
            app:destination="@id/filteredHorsesFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_filterFragment_to_filteredAccessoriesFragment"
            app:destination="@id/filteredAccessoriesFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_filterFragment_to_filteredMedicalsFragment"
            app:destination="@id/filteredMedicalsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_filterFragment_to_filteredTrucksFragment"
            app:destination="@id/filteredTrucksFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
        <action
            android:id="@+id/action_filterFragment_to_filteredBarnFragment"
            app:destination="@id/filteredBarnFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/filteredHorsesFragment"
        android:name="com.raantech.solalat.user.ui.filter.fragments.FilteredHorsesFragment"
        android:label="FilteredHorsesFragment"
        tools:layout="@layout/fragment_filtered_horse" />
    <fragment
        android:id="@+id/filteredAccessoriesFragment"
        android:name="com.raantech.solalat.user.ui.filter.fragments.FilteredAccessoriesFragment"
        android:label="FilteredAccessoriesFragment"
        tools:layout="@layout/fragment_filtered_accessories" />
    <fragment
        android:id="@+id/filteredMedicalsFragment"
        android:name="com.raantech.solalat.user.ui.filter.fragments.FilteredMedicalsFragment"
        android:label="FilteredMedicalsFragment"
        tools:layout="@layout/fragment_filtered_medicals" />
    <fragment
        android:id="@+id/filteredTrucksFragment"
        android:name="com.raantech.solalat.user.ui.filter.fragments.FilteredTrucksFragment"
        android:label="FilteredTrucksFragment"
        tools:layout="@layout/fragment_filtered_trucks"/>
    <fragment
        android:id="@+id/filteredBarnFragment"
        android:name="com.raantech.solalat.user.ui.filter.fragments.FilteredBarnFragment"
        android:label="FilteredBarnFragment"
        tools:layout="@layout/fragment_filtered_barn"/>
</navigation>